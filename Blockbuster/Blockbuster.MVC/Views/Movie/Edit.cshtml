@model Blockbuster.BusinessModel.Entities.Movie
    
<h3>Edit @Model.Name Info.</h3>

@using (Html.BeginForm("Edit", "Movie", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(movie => movie.Name, new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.TextBoxFor(movie => movie.Name, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(movie => movie.ReleaseYear, new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.TextBoxFor(movie => movie.ReleaseYear, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(movie => movie.Summary, new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.TextAreaFor(movie => movie.Summary, new { @class = "form-control", cols = 3, rows = 8 })
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            @Html.TextBox("Update", "Update", null, new { @type = "submit", @class = "btn btn-primary" })
            @Html.ActionLink("Cancel", "Index", "Movie", null, new { @class = "btn btn-danger" })
        </div>
    </div>
}